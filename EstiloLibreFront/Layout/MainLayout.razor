<link href="css/Layout/MainLayout.css" rel="stylesheet" />

<MudLayout>
    <MenuLateral @ref="this.MenuLateral" />

    <MudMainContent>       
        <CascadingValue Value="this">
            <MenuSuperior />
            @Body
        </CascadingValue>
    </MudMainContent>
</MudLayout>

