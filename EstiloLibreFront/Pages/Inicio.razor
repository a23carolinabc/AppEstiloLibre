    #region ***** INYECCIONES *****
    [Inject]
    public required IStringLocalizer<TrInicio> Traductor { get; set; }
    #endregion

    #region ***** PARÁMETROS *****
    #endregion

    #region ***** PROPIEDADES PRIVADAS *****
    #endregion

    #region ***** MÉTODOS PÚBLICOS *****
    #endregion

    #region ***** MÉTODOS PRIVADOS *****
    #endregion
}
