@attribute [AllowAnonymous]
@page "/conocenos"
@layout LayoutPublico
<link href="css/Pages/Conocenos.css" rel="stylesheet" />

<PageTitle>@Traductor["pagetitle"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="conocenos-container py-8">
    <!-- Encabezado -->
    <MudPaper Elevation="0" Class="text-center mb-8">
        <MudText Typo="Typo.h2" Class="mb-4 intro-titulo">@Traductor["lblTitulo"]</MudText>
        <MudText Typo="Typo.h6" Class="conocenos-subtitulo">
            @Traductor["lblSubTitulo"]            
        </MudText>
    </MudPaper>

    <!-- Nuestra Historia -->
    <MudCard Elevation="2" Class="mb-6">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">
                    <MudIcon Icon="@Icons.Material.Filled.History" Size="Size.Large" Color="Color.Primary" Class="mr-2" />
                    @Traductor["lblNuestraHistoria"]
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body1" Class="mb-4">
                @Traductor["lblHistoriaParrafo1"]
            </MudText>
            <MudText Typo="Typo.body1" Class="mb-4">
                @Traductor["lblHistoriaParrafo2"]
                
            </MudText>
            <MudText Typo="Typo.body1">
                @Traductor["lblHistoriaParrafo3"]                
            </MudText>
        </MudCardContent>
    </MudCard>

    <!-- Nuestra Misión y Visión -->
    <MudGrid Spacing="4" Class="mb-6">
        <MudItem xs="12" md="6">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">
                            <MudIcon Icon="@Icons.Material.Filled.Flag" Size="Size.Large" Class="mr-2" Color="Color.Primary" />
                             @Traductor["lblNuestraMision"]
                        </MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body1">
                        @Traductor["lblMisionDescripcion"]                        
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">
                            <MudIcon Icon="@Icons.Material.Filled.Visibility" Size="Size.Large" Class="mr-2" Color="Color.Primary" />
                            @Traductor["lblNuestraVision"]
                        </MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body1">
                        @Traductor["lblVisionDescripcion"]                        
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Nuestros Valores -->
    <MudCard Elevation="2" Class="mb-6">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4">
                    <MudIcon Icon="@Icons.Material.Filled.Star" Size="Size.Large" Class="mr-2" Color="Color.Primary" />
                    @Traductor["lblNuestrosValores"]
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudList Dense="true" T="string">
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                    <MudText Typo="Typo.body1" Class="negrita">@Traductor["lblValorSostenibilidad"]</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Dark">
                        @Traductor["lblDescSostenibilidad"]                        
                    </MudText>
                </MudListItem>
                <MudDivider />
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                    <MudText Typo="Typo.body1" Class="negrita">@Traductor["lblValorSimplicidad"]</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Dark">
                        @Traductor["lblDescSimplicidad"]                        
                    </MudText>
                </MudListItem>
                <MudDivider />
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                    <MudText Typo="Typo.body1" Class="negrita">@Traductor["lblValorPrivacidad"]</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Dark">
                        @Traductor["lblDescPrivacidad"]                        
                    </MudText>
                </MudListItem>
                <MudDivider />
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                    <MudText Typo="Typo.body1" Class="negrita">@Traductor["lblValorInnovacion"]</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Dark">
                        @Traductor["lblDescInnovacion"]
                    </MudText>
                </MudListItem>
                <MudDivider />
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                    <MudText Typo="Typo.body1" Class="negrita">@Traductor["lblValorInclusividad"]</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Dark">
                        @Traductor["lblDescInclusividad"]                        
                    </MudText>
                </MudListItem>
            </MudList>
        </MudCardContent>
    </MudCard>

    <!-- ¿Por qué EstiloLibre? -->
    <MudCard Elevation="2" Class="mb-6">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4">
                    <MudIcon Icon="@Icons.Material.Filled.QuestionAnswer" Color="Color.Primary" Size="Size.Large" Class="mr-2" />
                    @Traductor["lblPorQueEstiloLibre"]
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid Spacing="3">
                <MudItem xs="12" md="6">
                    <MudPaper Elevation="1" Class="pa-4">
                        <MudText Typo="Typo.h6" Color="Color.Primary" Class="mb-2">
                            <MudIcon Icon="@Icons.Material.Filled.Nature" />@Traductor["lblModaSostenible"]
                        </MudText>
                        <MudText Typo="Typo.body2">
                            @Traductor["lblDescModaSostenible"]                            
                        </MudText>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudPaper Elevation="1" Class="pa-4">
                        <MudText Typo="Typo.h6" Color="Color.Primary" Class="mb-2">
                            <MudIcon Icon="@Icons.Material.Filled.AttachMoney" />@Traductor["lblAhorraDinero"]
                        </MudText>
                        <MudText Typo="Typo.body2">
                            @Traductor["lblDescAhorraDinero"]                            
                        </MudText>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudPaper Elevation="1" Class="pa-4">
                        <MudText Typo="Typo.h6" Color="Color.Primary" Class="mb-2">
                            <MudIcon Icon="@Icons.Material.Filled.AccessTime" />@Traductor["lblAhorraTiempo"]
                        </MudText>
                        <MudText Typo="Typo.body2">
                            @Traductor["lblDescAhorraTiempo"]                            
                        </MudText>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudPaper Elevation="1" Class="pa-4">
                        <MudText Typo="Typo.h6" Color="Color.Primary" Class="mb-2">
                            <MudIcon Icon="@Icons.Material.Filled.Psychology" />@Traductor["lblDescubreTuEstilo"]
                        </MudText>
                        <MudText Typo="Typo.body2">
                            @Traductor["lblDescDescubreTuEstilo"]                            
                        </MudText>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>

    <!-- Acción -->
    <MudPaper Elevation="4" Class="pa-6 text-center div-accion">
        <MudText Typo="Typo.h5" Class="mb-4">
            @Traductor["lblAccionPregunta"]
        </MudText>
        <MudStack Row="true" Justify="Justify.Center" Spacing="3">
            <MudButton Href="@URLsPantallas.Registro" 
                       Variant="Variant.Filled" 
                       Color="Color.Primary"
                       Size="Size.Large">                
                @Traductor["btnRegistrarseGratis"]
            </MudButton>
            <MudButton Href="@URLsPantallas.Inicio" 
                       Variant="Variant.Outlined" 
                       Color="Color.Primary"
                       Size="Size.Large">
                @Traductor["btnVolverAlInicio"]                
            </MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>

@code {
    #region ***** INYECCIONES *****
    [Inject]
    public required IStringLocalizer<TrConocenos> Traductor { get; set; }
    #endregion

    #region ***** PARÁMETROS *****
    #endregion

    #region ***** PROPIEDADES PRIVADAS *****
    #endregion

    #region ***** MÉTODOS PÚBLICOS *****
    #endregion

    #region ***** MÉTODOS PRIVADOS *****
    #endregion
}
