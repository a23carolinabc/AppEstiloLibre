<MudDrawer Open="true" Elevation="0" Variant="@DrawerVariant.Persistent"
           ClipMode="DrawerClipMode.Never">
    <MudPaper Width="100%" Height="100%" Class="d-inline-flex py-3" Elevation="0" Outlined=true >
        <MudNavMenu Class="mud-width-full">
            <MudText Typo="Typo.h6" Class="px-4">@Traductor["EstiloLibre"]</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@Traductor["lblMenu"]</MudText>
            <MudDivider Class="my-2" />
            <MudNavLink Href=@(URLsPantallas.ListadoPrendas)
                        Icon="@Icons.Material.Filled.DashboardCustomize">@Traductor["nvlkListaPrendas"]</MudNavLink>
            <MudNavLink Href=@(URLsPantallas.Prendas) 
                        Icon="@Icons.Material.Filled.DashboardCustomize">@Traductor["nvlkCrearPrenda"]</MudNavLink>
            <MudNavLink Href=@(URLsPantallas.ListadoConjuntos)
                        Icon="@Icons.Material.Filled.DashboardCustomize">@Traductor["nvlkListaConjuntos"]</MudNavLink>
            <MudNavLink Href=@(URLsPantallas.Conjuntos)
                        Icon="@Icons.Material.Filled.DashboardCustomize">@Traductor["nvlkCrearConjunto"]</MudNavLink>
            <MudNavLink Href=@(URLsPantallas.ExplorarConjuntos)
                        Icon="@Icons.Material.Filled.DashboardCustomize">@Traductor["nvlkExplorarConjuntos"]</MudNavLink>
            <MudNavLink Href=@(URLsPantallas.ExplorarPrendas)
                        Icon="@Icons.Material.Filled.DashboardCustomize">@Traductor["nvlkExplorarPrendas"]</MudNavLink>
        </MudNavMenu>
    </MudPaper>
</MudDrawer>


